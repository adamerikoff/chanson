<div class="flex justify-center my-8">
  <div class="w-full max-w-xs">
    <div class="bg-gray-100 shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <%= form_with model: @playlist do |form| %>
      <h3 class="pt-4 text-2xl font-bold mb-8">Create new playlist</h3>
        <div class="mb-4">
          <%= form.label :name, class: "block text-gray-700 text-sm font-bold" %><br>
          <%= form.text_field :name, class: "shadow appearance-none border rounded w-full px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="flex items-center justify-between">
          <%= form.submit "Create", class: "bg-green-700 cursor-pointer hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>