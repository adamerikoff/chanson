<body class="font-mono bg-gray-100">
  <!-- Container -->
  <div class="container mx-auto">
    <div class="flex justify-center px-6 my-12">
      <!-- Row -->
      <div class="w-full xl:w-3/4 lg:w-11/12 flex">
        <!-- Col -->
        <div class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg" 
          style="background-image: url(/assets/login.jpeg)">
        </div>
        <!-- Col -->
        <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
          <h3 class="pt-4 text-2xl text-center">Log In!</h3>
          <div class="px-8 pt-6 pb-8 mb-4 bg-white rounded">
            <%= form_with url: login_path do |f| %>
              <div class="mb-4 md:flex md:justify-between">
              </div>
              <div class="mb-4">
                <%= f.label :username, class: "block mb-2 text-sm font-bold text-gray-700" %>
                <%= f.text_field :username, class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
              </div>
              <div class="mb-4">
                <%= f.label :password, class: "block mb-2 text-sm font-bold text-gray-700" %>
                <%= f.password_field :password, class: "w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" %>
              </div>
              <div class="mb-6 text-center">
                <%= f.submit "Log In", class: "w-full px-4 py-2 font-bold text-white bg-blue-500 rounded-full hover:bg-blue-700 focus:outline-none focus:shadow-outline" %>
              </div>
              <hr class="mb-6 border-t" />
              <div class="text-center">
                <%= link_to "Dont have an account? Register!", registration_path, class: "inline-block text-sm text-blue-500 align-baseline hover:text-blue-800" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>