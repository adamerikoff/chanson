<div class="text-center" style="margin-top: 80px;"> 
  <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Trending <span class="text-blue-600 dark:text-blue-500">Genres</span>.</h1>
  <div class="flex justify-center items-center mb-4">
    <% if logged_in? %>
      <% if is_admin? %>
        <%= link_to "Add new", new_genre_path, class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" %>
      <% else %>
        <p class="text-sm font-medium text-grey-600 dark:text-blue-500">Add new</p>
      <% end %>
    <% end %>
  </div>
</div>
<div class="flex justify-center my-5">
  <div class="max-w-2xl mx-auto" style="width: 400px;">
    <div class="p-4 max-w-md bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
      <div class="flow-root">
        <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @genres.each do |genre| %>
          <%= link_to genre do %>
              <li class="py-3 sm:py-4 hover:bg-gray-200 rounded-lg px-2">
                <div class="flex items-center space-x-4">
                  <div class="p-4 text-indigo-600 text-center border border-transparent rounded" style="background-color: rgb(<%= random_color %>);">
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xl font-medium text-gray-900 font-semibold truncate dark:text-white">
                      <%= genre.name %>
                    </p>
                  </div>
                  <div class="items-center text-sm text-base text-gray-900 dark:text-white">
                    1980
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      songs
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>