<div class="text-center" style="margin-top: 40px;margin-bottom: 50px;"> 
  <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Search Results...</h1>
</div>
<div class="flex justify-center my-5">
  <div class="max-w-2xl mx-auto" style="width: 400px;">
    <div class="p-4 max-w-md bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
      <div class="flow-root">
        <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @genres.each do |genre| %>
            <%= link_to genre do %>
              <li class="py-3 sm:py-4 hover:bg-gray-200 rounded-lg px-2">
                <div class="flex items-center space-x-4">
                  <div class="p-4 text-indigo-600 text-center border border-transparent rounded" style="background-color: rgb(<%= random_color %>);">
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xl font-medium text-gray-900 font-semibold truncate dark:text-white">
                      <%= genre.name %>
                    </p>
                    <p class="text-sm text-gray-500">genre</p>
                  </div>
                  <div class="items-center text-sm text-base text-gray-900 dark:text-white">
                    <%= genre.songs.count %>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      tracks
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
          <% @artists.each do |artist| %>
            <%= link_to artist do %>
              <li class="py-3 sm:py-4 hover:bg-gray-200 rounded-lg px-2">
                <div class="flex items-center space-x-4">
                  <div class="p-4 text-indigo-600 text-center border border-transparent rounded" style="background-color: rgb(<%= random_color %>);">
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xl font-medium text-gray-900 font-semibold truncate dark:text-white">
                      <%= artist.name %>
                    </p>
                    <p class="text-sm text-gray-500">artist</p>
                  </div>
                  <div class="items-center text-sm text-base text-gray-900 dark:text-white">
                    <%= artist.songs.count %>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      tracks
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
          <% @playlists.each do |playlist| %>
            <%= link_to playlist do %>
              <li class="py-3 sm:py-4 hover:bg-gray-200 rounded-lg px-2">
                <div class="flex items-center space-x-4">
                  <div class="p-4 text-indigo-600 text-center border border-transparent rounded" style="background-color: rgb(<%= random_color %>);">
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xl font-medium text-gray-900 font-semibold truncate dark:text-white">
                      <%= playlist.name %>
                    </p>
                    <p class="text-sm text-gray-500">playlist</p>
                  </div>
                  <div class="items-center text-sm text-base text-gray-900 dark:text-white">
                    <%= playlist.songs.count %>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      tracks
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
          <% @albums.each do |album| %>
            <%= link_to album do %>
              <li class="py-3 sm:py-4 hover:bg-gray-200 rounded-lg px-2">
                <div class="flex items-center space-x-4">
                  <div class="p-4 text-indigo-600 text-center border border-transparent rounded" style="background-color: rgb(<%= random_color %>);">
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xl font-medium text-gray-900 font-semibold truncate dark:text-white">
                      <%= album.name %>
                    </p>
                    <p class="text-sm text-gray-500">album</p>
                  </div>
                  <div class="items-center text-sm text-base text-gray-900 dark:text-white">
                    <%= album.songs.count %>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      tracks
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
          <% @songs.each do |song| %>
            <%= link_to song do %>
              <li class="py-3 sm:py-4 hover:bg-gray-200 rounded-lg px-2">
                <div class="flex items-center space-x-4">
                  <div class="p-4 text-indigo-600 text-center border border-transparent rounded" style="background-color: rgb(<%= random_color %>);">
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-xl font-medium text-gray-900 font-semibold truncate dark:text-white">
                      <%= song.title %>
                    </p>
                    <p class="text-sm text-gray-500">song</p>
                  </div>
                  <div class="items-center text-sm text-base text-gray-900 dark:text-white">
                    <%= song.artist.name %>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>