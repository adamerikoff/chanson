<div class="text-center"> 
  <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Trending <span class="text-blue-600 dark:text-blue-500">Artists</span>.</h1>
  <div class="flex justify-center items-center mb-4">
    <% if logged_in? %>
      <% if is_admin? %>
        <%= link_to "Add new", new_artist_path, class: "text-sm font-medium text-blue-600 hover:underline dark:text-blue-500" %>
      <% else %>
        <p class="text-sm font-medium text-grey-600 dark:text-blue-500">Add new</p>
      <% end %>
    <% end %>
  </div>
</div>
<div class="flex flex-wrap flex-row justify-center">
<% @artists.each do |artist| %>
  <%= link_to artist do %>
      <div class="p-8">
        <div class="group relative block bg-black shadow" style="width: 350px;height: 500px;">
          <% if artist.avatar.attached? %>
            <%= image_tag artist.avatar, class: "absolute inset-0 object-cover opacity-75 transition-opacity group-hover:opacity-50", style: "width: 500px;height: 500px;" %>
          <% else %>
            <%= image_tag "temp.jpg", class: "absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50" %>
          <% end %>
          <div class="relative p-8">
            <p class="text-sm font-medium uppercase tracking-widest" style=" color: rgb(<%= random_color %>);">
              Artist
            </p>
            <p class="text-2xl font-bold text-white"><%= artist.name %></p>
            <div class="mt-64">
              <div class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100">
                <p class="text-sm text-white">
                  <%= artist.about %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
  <% end %>
<% end %>
</div>

