<div class="flex flex-wrap justify-center my-8">
  <div class="relative block rounded-xl border border-gray-100 p-8 shadow-xl">
    <div class="mt-4 text-gray-500 sm:pr-8">
      <h3 class="mt-4 text-xl font-bold text-gray-900"><%= @song.title %></h3>
      <%= link_to @song.artist.name, artist_path(@song.artist), class: "mt-2 text-md block hover:underline" %>
      <%= link_to @song.album.name, album_path(@song.album), class: "mt-2 text-sm block hover:underline" %>
